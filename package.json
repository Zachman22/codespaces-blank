{
  "name": "codespaces-blank-site",
  "version": "1.0.0",
  "private": true,
  "description": "Beautiful starter site with dev tooling (Vite, React, Tailwind, ESLint, Prettier, Vitest, Playwright, Codespaces devcontainer)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "playwright:install": "playwright install --with-deps",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.4.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.13.1",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.32",
    "prettier": "^2.9.0",
    "tailwindcss": "^3.4.10",
    "vite": "^5.2.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
